{
  "name": "@urban-ui/button",
  "version": "0.9.0",
  "type": "module",
  "module": "./dist/index.js",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js"
  },
  "files": [
    "src",
    "dist"
  ],
  "license": "MIT",
  "scripts": {
    "lint": "biome lint src",
    "format": "biome format src --write",
    "typecheck": "tsc",
    "clean": "del dist",
    "dev": "rslib build --watch --no-clean",
    "build": "rslib build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:visual": "playwright test -c playwright-ct.config.ts",
    "test:visual:update": "playwright test -c playwright-ct.config.ts --update-snapshots",
    "test:visual:docker": "docker compose -f ../../../docker-compose.yml run --rm -w /work/packages/action/button visual-test bunx playwright test -c playwright-ct.config.ts",
    "test:visual:docker:update": "docker compose -f ../../../docker-compose.yml run --rm -w /work/packages/action/button visual-test bunx playwright test -c playwright-ct.config.ts --update-snapshots"
  },
  "dependencies": {
    "@urban-ui/text": "workspace:*",
    "@urban-ui/theme": "workspace:*",
    "@urban-ui/styles": "workspace:*"
  },
  "peerDependencies": {
    "react": "19.2.3",
    "@stylexjs/stylex": "^0.17.5",
    "react-aria-components": "^1.14.0"
  },
  "devDependencies": {
    "@playwright/experimental-ct-react": "^1.58.0",
    "@stylexswc/unplugin": "^0.14.2",
    "@vitejs/plugin-react": "^4.2.1",
    "react-aria-components": "^1.14.0",
    "@happy-dom/jest-environment": "^20.3.3",
    "@jest/globals": "^30.2.0",
    "@stylexswc/jest": "0.14.2",
    "@swc/jest": "^0.2.39",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@rsbuild/plugin-react": "1.4.2",
    "@rslib/core": "0.19.2",
    "@urban-ui/test-utils": "workspace:*",
    "@urban-ui/tsconfig": "workspace:*",
    "del-cli": "^6.0.0",
    "expect-type": "^1.2.1",
    "jest": "^30.2.0",
    "jest-chain-transform": "^0.0.8",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "typescript": "^5.9.3"
  }
}
