{
  "name": "@urban-ui/mcp",
  "version": "0.1.0",
  "description": "MCP server for Urban UI documentation",
  "type": "module",
  "bin": {
    "urban-ui-mcp": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "license": "MIT",
  "scripts": {
    "lint": "biome lint src",
    "format": "biome format src --write",
    "typecheck": "tsc --noEmit",
    "clean": "del dist",
    "prebuild": "bun run scripts/copy-docs.ts",
    "build": "tsc -p tsconfig.build.json",
    "dev": "bun run src/index.ts",
    "start": "node dist/index.js",
    "preview": "bunx @modelcontextprotocol/inspector@latest bun run ./dist/index.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^24",
    "del-cli": "^6.0.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mattstyles/urban-ui.git",
    "directory": "packages/zeus/mcp"
  }
}
