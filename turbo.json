{
  "$schema": "https://turborepo.dev/schema.json",
  "ui": "tui",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**"]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "outputs": []
    },
    "typecheck": {
      "dependsOn": ["^typecheck"],
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "outputs": []
    },
    "test": {
      "outputs": []
    },
    "test:visual": {
      "dependsOn": ["^build"],
      "outputs": [],
      "cache": false,
      "passThroughEnv": ["PLAYWRIGHT_BROWSERS_PATH"]
    },
    "test:visual:update": {
      "dependsOn": ["^build"],
      "outputs": ["__snapshots__/**"],
      "cache": false,
      "passThroughEnv": ["PLAYWRIGHT_BROWSERS_PATH"]
    },
    "scaffold": {
      "dependsOn": ["^build"]
    }
  }
}
