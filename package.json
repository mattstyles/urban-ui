{
  "name": "urban-ui",
  "description": "UI components powered by react-aria and stylex",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "author": "Matt Styles",
  "workspaces": [
    "apps/*",
    "packages/*",
    "scripts/*",
    "tooling/*",
    "packages/zeus/*",
    "packages/core/*",
    "packages/internal/*",
    "packages/layout/*",
    "packages/typography/*",
    "packages/utility/*",
    "packages/feedback/*",
    "packages/action/*",
    "packages/navigation/*",
    "packages/display/*",
    "packages/interaction/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mattstyles/urban-ui.git"
  },
  "scripts": {
    "test": "CI=true turbo run test",
    "test:visual": "turbo run test:visual --filter=\"./packages/**\"",
    "test:visual:docker": "docker compose run --rm visual-test bun run test:visual",
    "test:visual:docker:update": "docker compose run --rm visual-test bun run test:visual:update",
    "test:visual:docker:clean": "docker volume rm urban-ui-visual-test-node-modules",
    "build:ci": "turbo run build --filter=\"./packages/**\"",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "format": "biome format --write {packages,apps}",
    "scaffold": "node packages/tmpl/dist/bin/tmpl.js",
    "gen": "turbo gen",
    "publish-packages": "CI=true turbo run build --filter=\"./packages/**\" lint test && changeset version && changeset publish"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@turbo/gen": "^2.3.3",
    "@types/bun": "^1.3.6",
    "turbo": "^2.7.4",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "packageManager": "bun@1.3.6"
}
